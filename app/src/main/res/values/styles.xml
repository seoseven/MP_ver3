<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget" />

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="Widget.ListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">?attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?attr/listPreferredItemPaddingEnd</item>
        <item name="android:minHeight">?attr/listPreferredItemHeight</item>
    </style>

    <!-- 歌单页面项目 -->
    <style name="Widget.ListItem.PlaySheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 歌单页面项目内部文字布局 -->
    <style name="Widget.ListItem.PlaySheet.Inner">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 音乐详情页面项目 -->
    <style name="Widget.ListItem.MusicDetail">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.ImageView" />

    <style name="Widget.ImageView.Item">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Widget.ImageView.Item.PlaySheet">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="Widget.ImageView.Album">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.ImageView.Album.Mini">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Widget.ImageView.Button">
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.ImageView.Button.Player">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Widget.ImageView.Button.Player.Action">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="Widget.ImageView.Button.Player.Mini">
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Widget.ImageView.Arrow">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="tint">?android:textColorSecondary</item>
        <item name="srcCompat">@drawable/ic_arrow</item>
    </style>

    <style name="Widget.TextView" />

    <style name="Widget.TextView.MusicDetail">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearance" />

    <style name="TextAppearance.ListTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ListContent">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.PlayerTime">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
